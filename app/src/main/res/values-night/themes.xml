<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme to be overriden when Dark Mode is enabled -->
    <style name="Theme.Parky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_red_700</item>
        <item name="colorPrimaryVariant">@color/md_red_900</item>
        <item name="colorOnPrimary">@color/md_red_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_teal_700</item>
        <item name="colorSecondaryVariant">@color/md_teal_900</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--Custom theme-->
        <item name="colorPrimaryContrast">@color/md_white_1000</item>
        <item name="colorPrimaryMediumContrast">@color/md_white_1000</item>
        <item name="colorLightSecondary">@color/md_teal_50</item>
        <item name="colorMediumPrimary">@color/md_red_400</item>
        <item name="colorHourRateBackground">@color/md_blue_grey_900</item>
        <item name="colorAlarmFieldBorder">@color/md_white_1000</item>
        <item name="colorGreyBackground">#0E0E0E</item>
        <item name="colorGreyTextTitle">@color/md_white_1000</item>
        <item name="colorGreyTextSubtitle">@color/md_white_1000</item>
        <item name="colorCardBackground">@color/md_blue_grey_800</item>
        <item name="colorTimeBackground">@color/md_grey_700</item>
        <item name="colorShadowBackground">@color/md_black_1000</item>
        <item name="colorPrimaryButtonText">@color/md_white_1000</item>
        <item name="colorTextTitle">@color/md_white_1000</item>
    </style>

    <!--Green-Red Theme-->
    <style name="Theme.GreenRed" parent="Theme.Parky" />

    <!--Orange-Amber Theme-->
    <style name="Theme.OrangeAmber" parent="Theme.Parky" />

    <!--Purple-Green Theme-->
    <style name="Theme.PurpleGreen" parent="Theme.Parky" />

    <style name="Widget.App.Toolbar.PopUpMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/md_blue_grey_800</item>
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

</resources>