<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/parking_history_empty_animation"
        android:layout_width="wrap_content"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/parking_history_empty_title"
        app:layout_constraintDimensionRatio="h, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_fileName="parking_empty_state.json" />

    <TextView
        android:id="@+id/parking_history_empty_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="@string/parking_empty_state_message"
        android:textColor="@color/primary_contrast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parking_history_empty_animation" />

</androidx.constraintlayout.widget.ConstraintLayout>