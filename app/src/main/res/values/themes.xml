<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Parky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_500</item>
        <item name="colorPrimaryVariant">@color/md_blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_orange_700</item>
        <item name="colorSecondaryVariant">@color/md_orange_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Parky.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Parky.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Parky.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimaryDark">@color/md_blue_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogPoppingFromBottom</item>
    </style>

    <style name="FullWidthDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">99%</item>
        <item name="windowFixedWidthMinor">99%</item>
    </style>

    <style name="DialogPoppingFromBottom">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="TextInputLayout_OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_blue_700</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

</resources>