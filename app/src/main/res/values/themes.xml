<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Parky" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_700</item>
        <item name="colorPrimaryVariant">@color/md_blue_900</item>
        <item name="colorOnPrimary">@color/md_blue_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_orange_700</item>
        <item name="colorSecondaryVariant">@color/md_orange_200</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--Custom theme-->
        <item name="colorPrimaryContrast">@color/md_blue_700</item>
        <item name="colorPrimaryMediumContrast">@color/md_blue_400</item>
        <item name="colorLightSecondary">@color/md_orange_50</item>
        <item name="colorMediumPrimary">@color/md_blue_400</item>
        <item name="colorHourRateBackground">@color/md_blue_50</item>
        <item name="colorAlarmFieldBorder">@color/md_blue_700</item>
        <item name="colorGreyBackground">@color/md_grey_100</item>
        <item name="colorGreyTextTitle">@color/md_grey_800</item>
        <item name="colorGreyTextSubtitle">@color/md_grey_600</item>
        <item name="colorCardBackground">@color/md_white_1000</item>
        <item name="colorTimeBackground">@color/md_black_1000</item>
        <item name="colorShadowBackground">@color/md_grey_300</item>
        <item name="colorPrimaryButtonText">@color/md_white_1000</item>
        <item name="colorTextTitle">@color/md_black_1000</item>
    </style>

    <!--Green-Red Theme-->
    <style name="Theme.GreenRed" parent="Theme.Parky">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_green_600</item>
        <item name="colorPrimaryVariant">@color/md_green_800</item>
        <item name="colorOnPrimary">@color/md_green_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_red_600</item>
        <item name="colorSecondaryVariant">@color/md_red_900</item>
        <item name="colorOnSecondary">@color/md_red_900</item>
        <!--Custom theme-->
        <item name="colorPrimaryContrast">@color/md_green_600</item>
        <item name="colorPrimaryMediumContrast">@color/md_green_400</item>
        <item name="colorMediumPrimary">@color/md_green_400</item>
        <item name="colorLightSecondary">@color/md_red_50</item>
        <item name="colorHourRateBackground">@color/md_green_50</item>
        <item name="colorAlarmFieldBorder">@color/md_green_600</item>
    </style>

    <!--Orange-Amber Theme-->
    <style name="Theme.OrangeAmber" parent="Theme.Parky">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_orange_600</item>
        <item name="colorPrimaryVariant">@color/md_orange_800</item>
        <item name="colorOnPrimary">@color/md_orange_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_amber_600</item>
        <item name="colorSecondaryVariant">@color/md_amber_200</item>
        <item name="colorOnSecondary">@color/md_amber_200</item>
        <!--Custom theme-->
        <item name="colorPrimaryContrast">@color/md_orange_600</item>
        <item name="colorPrimaryMediumContrast">@color/md_orange_400</item>
        <item name="colorMediumPrimary">@color/md_orange_400</item>
        <item name="colorLightSecondary">@color/md_amber_50</item>
        <item name="colorHourRateBackground">@color/md_orange_50</item>
        <item name="colorAlarmFieldBorder">@color/md_orange_600</item>
    </style>

    <!--Purple-Green Theme-->
    <style name="Theme.PurpleGreen" parent="Theme.Parky">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_purple_600</item>
        <item name="colorPrimaryVariant">@color/md_purple_800</item>
        <item name="colorOnPrimary">@color/md_purple_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_green_600</item>
        <item name="colorSecondaryVariant">@color/md_green_200</item>
        <item name="colorOnSecondary">@color/md_green_200</item>
        <!--Custom theme-->
        <item name="colorPrimaryContrast">@color/md_purple_600</item>
        <item name="colorPrimaryMediumContrast">@color/md_purple_300</item>
        <item name="colorMediumPrimary">@color/md_purple_300</item>
        <item name="colorLightSecondary">@color/md_green_50</item>
        <item name="colorHourRateBackground">@color/md_purple_50</item>
        <item name="colorAlarmFieldBorder">@color/md_purple_50</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorOnPrimary</item>
        <item name="colorAccent">?attr/colorSecondary</item>
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Theme.Parky.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Parky.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Parky.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullScreenDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/DialogPoppingFromBottom</item>
    </style>

    <style name="FullWidthDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">99%</item>
        <item name="windowFixedWidthMinor">99%</item>
    </style>

    <style name="DialogPoppingFromBottom">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/layout_text_input_contrast</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">?attr/colorPrimaryContrast</item>
    </style>

    <style name="Widget.App.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/layout_text_input_contrast</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="Widget.App.Toolbar.PopUpMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/md_grey_200</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

</resources>